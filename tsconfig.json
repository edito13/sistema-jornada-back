{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/types", "./src/interfaces"],
    "types": ["node", "express"]
  },
  "include": ["src/**/*", "src/interfaces/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
